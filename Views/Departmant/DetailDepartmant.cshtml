@using MvcOnlineAutomationProject.Models.EntityFramework
@model List<Employee>
@{
    ViewBag.Title = "DetailDepartmant";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h2>Departman Detay</h2>
<br />

<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active">Departman=@ViewBag.V</li>
</ol>
<table class="table table-hover">
    <tr>
        <td>Personel Id</td>
        <td>Personel Adı</td>
        <td>Personel Soyadı</td>
        <td>Personel Resim</td>
        <td>Satışlar</td>
        @*<td>Personel Departman</td>*@
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.EmployeeId</td>
            <td>@item.EmployeeName</td>
            <td>@item.EmployeeSurname</td>
            <td>@item.EmployeeImage</td>
            <td><a href="/Departmant/SalesDepartmant/@item.EmployeeId" class="btn btn-danger" style="background-color:lightcoral">Satışlar</a></td>
        </tr>
    }

</table>


