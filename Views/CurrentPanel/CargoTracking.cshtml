@using MvcOnlineAutomationProject.Models.EntityFramwork
@model List<CargoDetail>
@{
    ViewBag.Title = "CargoTracking";
    Layout = "~/Views/Shared/_CurrentLayout.cshtml";
}



<br />
@using (Html.BeginForm("CargoTracking", "CurrentPanel", FormMethod.Get))
{
    <p>
        Kargo Takip Numarası : @Html.TextBox("p")
        <input type="submit" value="Ara" />
    </p>
}
<table class="table table-bordered">
    <tr>
        <td>Personel</td>
        <td>Alıcı</td>
        <td>Tarih</td>
        <td>Detaylar</td>

    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Employee</td>
            <td>@item.Receiver</td>
            <td>@item.Date</td>
            <td><a href="/CurrentPanel/CargoDetail/@item.StarckingCode" class="btn btn-success">Detaylar</a></td>

        </tr>
    }

</table>


