@using MvcOnlineAutomationProject.Models.EntityFramwork
@model List<CargoDetail>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
@using (Html.BeginForm("Index", "Cargo", FormMethod.Get))
{
    <p>
         Kargo Takip Numarası : @Html.TextBox("p")
        <input type="submit" value="Ara" />
    </p>
}
<table class="table table-bordered">
    <tr>
        <td>Personel</td>
        <td>Alıcı</td>
        <td>Tarih</td>
        <td>Detaylar</td>

    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Employee</td>
            <td>@item.Receiver</td>
            <td>@item.Date</td>
            <td><a href="/Cargo/CargoTracking/@item.StarckingCode" class="btn btn-success">Detaylar</a></td>

        </tr>
    }

</table>
<a href="/Cargo/AddCargo/" class="btn btn-dark">Yeni Kargo Ekle </a>
