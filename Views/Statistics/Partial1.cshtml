@model IEnumerable<MvcOnlineAutomationProject.Models.EntityFramwork.ClassGroup2>
<div class="card">
    <div class="card-header">
        <h3 class="card-title">Departman Personel Sayıları</h3>
    </div>
    <!-- /.card-header -->
    <div class="card-body p-0">
        <table class="table table-sm">
            <thead>
                <tr>
                    <th style="width: 10px">#</th>
                    <th>Departman</th>
                    <th>Progress Bar</th>
                    <th style="width: 40px">Sayı</th>
                </tr>
            </thead>
            <tbody>
                @{ var serialno = 0;}
                @foreach (var item in Model)
                {
                <tr>
                    <td>@{ serialno++;} @serialno</td>
                    <td>@item.Departmant</td>
                    <td>
                        @if (item.Count > 5)
                        {
                            <div class="progress progress-xs progress-striped active">
                                <div class="progress-bar bg-success" style="width: 90%"></div>
                            </div>
                        }
                        @if (item.Count == 5)
                        {
                            <div class="progress progress-xs">
                                <div class="progress-bar bg-warning" style="width: 70%"></div>
                            </div>
                        }
                        @if (item.Count == 3)
                        {
                            <div class="progress progress-xs">
                                <div class="progress-bar progress-bar-danger" style="width: 55%"></div>
                            </div>
                        }
                        @if (item.Count < 3)
                        {
                            <div class="progress progress-xs progress-striped active">
                                <div class="progress-bar bg-primary" style="width: 30%"></div>
                            </div>
                        }

                    </td>
                    <td><span class="badge bg-danger">@item.Count</span></td>
                </tr>
                }
            </tbody>
        </table>
    </div>
    <!-- /.card-body -->
</div>
